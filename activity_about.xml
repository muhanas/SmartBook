<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/biru"
    tools:context=".users.AboutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:background="@color/biru">

        <ImageView
            android:id="@+id/btn_back3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/btn_home3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_home"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/changa_one"
            android:text="Smart Book"
            android:textAlignment="center"
            android:textColor="@color/Black"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/btn_mart3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/open_book"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="130dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/darkBlue"
        android:layout_marginTop="50dp">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="0dp"
        android:background="@color/skyBlue">

        <ImageView
            android:layout_width="330dp"
            android:layout_height="300dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/icon_login"
            android:background="@color/cyan">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="30dp"
            android:background="@color/darkBlue">
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/arbutus"
                android:text="Profile"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Email                 : "
                    android:layout_marginLeft="20dp">
                </TextView>

            <TextView
                android:id="@+id/about"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:text="Email"
                android:textSize="20sp"></TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/usernamee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:textAlignment="center"
                android:text="Anda dapat mencari buku sesuai dengan buku yang anda perlukan di sini.">
            </TextView>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>